<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lab2.CreateBookViewController">
   <children>
      <VBox layoutX="159.0" layoutY="68.0">
         <children>
            <GridPane>
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label text="Genre" />
                  <Label text="Author" GridPane.rowIndex="1" />
                  <Label text="Make" GridPane.rowIndex="2" />
                  <Label text="Price" GridPane.rowIndex="3" />
                  <Label text="Digital" GridPane.rowIndex="4" />
                  <CheckBox fx:id="digitalCheckBox" mnemonicParsing="false" text="digital" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                  <TextField fx:id="genreTextField" GridPane.columnIndex="1" />
                  <TextField fx:id="authorTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <TextField fx:id="makeTextField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <TextField fx:id="priceTextField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
               </children>
            </GridPane>
            <Button mnemonicParsing="false" onAction="#submitButton" prefHeight="57.0" prefWidth="118.0" text="BUY THE BOOK" />
            <Label fx:id="msgLabel" text="Get info" />
         </children>
      </VBox>
   </children>
</AnchorPane>
